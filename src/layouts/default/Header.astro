---
import Logo from "@/assets/images/desulife-logo-typography.svg";
import Dropdown from "@/components/common/Dropdown.svelte";
import Drawer from "@/components/common/Drawer.svelte";
import { Icon } from "astro-icon/components";
---

<header>
  <div class="head-container">
    <div class="header-top">
      <div class="logo-title">
        <a href="/" aria-label="返回首页">
          <Logo class="logo" />
        </a>
        <span class="divider-vertical"></span>
        <a href="/" aria-label="支持中心">
          <span class="title">支持</span>
        </a>
      </div>
      <div class="right-content show-on-mobile">
        <Drawer
          client:load
          direction="right"
          closeOnOverlayClick={true}
          showCloseButton={true}
        >
          <Icon slot="button-icon" name="solar:hamburger-menu-linear" class="icon" />
          <div class="drawer-content">
            <ul class="drawer-menu">
              <li><a href="https://desu.life" target="_blank">官网</a></li>
              <li><a href="/">支持主页</a></li>
              <li><a href="/posts">资讯</a></li>
              <li><a href="/products">产品</a></li>
              <ul>
                <li><a href="/products/meowpad-v3">Meowpad V3</a></li>
                <li><a href="/products/pure64">Pure64</a></li>
                <li><a href="/products/meowpad-v2-se">Meowpad V2 SE</a></li>
                <li><a href="/products/meowpad-v2">Meowpad V2</a></li>
                <li><a href="/products/meowpad-v1">Meowpad V1</a></li>
              </ul>
              <li><a href="/download">下载</a></li>
              <!-- <li><a href="/service">申请售后</a></li>
              <li><a href="/service/progress">服务进度</a></li>
              <li><a href="/query">真伪查询</a></li> -->
              <li><a href="/contact">联系我们</a></li>
            </ul>
          </div>
        </Drawer>
      </div>
    </div>
    <span class="divider-horizontal"></span>
    <nav class="nav-bar">
      <ul>
        <li><a href="https://desu.life" target="_blank">官网</a></li>
        <li><a href="/">支持主页</a></li>
        <li><a href="/posts">资讯</a></li>
        <li class="dropdown">
          <Dropdown dropdownTrigger="hover" client:load>
            <a href="/products" slot="trigger">产品</a>
            <ul slot="menu" class="dropdown-list">
              <a href="/products/meowpad-v3"><li>Meowpad V3</li></a>
              <a href="/products/pure64"><li>Pure64</li></a>
              <a href="/products/meowpad-v2-se"><li>Meowpad V2 SE</li></a>
              <a href="/products/meowpad-v2"><li>Meowpad V2</li></a>
              <a href="/products/meowpad-v1"><li>Meowpad V1</li></a>
            </ul>
          </Dropdown>
        </li>
        <li><a href="/download">下载</a></li>
        <!-- <li><a href="/service">申请售后</a></li>
        <li><a href="/service/progress">服务进度</a></li>
        <li><a href="/query">真伪查询</a></li> -->
        <li><a href="/contact">联系我们</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    width: 100%;
    background: transparent;
    color: var(--color-text);
  }
  .head-container {
    max-width: 90vw;
    margin: 0 auto;
    padding: 16px 32px 32px;
    box-sizing: border-box;
  }
  .header-top {
    display: flex;
    align-items: center;
    height: 56px;
  }
  .logo-title {
    display: flex;
    align-items: center;
  }
  .logo {
    display: block;
    height: 28px;
    width: auto;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
  .divider-vertical {
    display: inline-block;
    width: 1px;
    height: 20px;
    background: var(--color-natural);
    margin: 0 12px;
    opacity: 0.5;
  }
  .title {
    font-size: 18px;
    font-weight: 400;
    letter-spacing: 2px;
  }
  .divider-horizontal {
    display: block;
    width: 100%;
    margin: 0;
    height: 1px;
    background: var(--color-natural);
    opacity: 0.5;
  }
  .nav-bar {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 40px;
  }
  .nav-bar ul {
    display: flex;
    gap: 24px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .nav-bar a,
  .nav-bar span {
    color: var(--color-text);
    text-decoration: none;
    font-size: 15px;
    transition: color 0.2s;
  }
  .nav-bar a:hover {
    color: var(--color-primary);
  }
  .dropdown-list {
    display: flex;
    flex-direction: column;
    padding: 4px 0;
    gap: 0px !important;
  }
  .dropdown-list a {
    display: block;
    text-decoration: none;
  }
  .dropdown-list li {
    padding: 8px 12px;
    border-radius: 6px;
    transition: background 0.2s;
  }
  .dropdown-list a:hover li {
    background: #2a2a2a;
    border-radius: 6px;
    cursor: pointer;
  }
  .dropdown-list a:hover {
    color: var(--color-primary);
  }
  .dropdown-list li {
    color: var(--color-text);
    font-size: 14px;
  }
  .right-content {
    margin-left: auto;
  }
  .menu-button {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    transition: color 0.2s;
  }
  .menu-button:hover {
    color: var(--color-primary);
  }
  .icon {
    width: 24px;
    height: 24px;
    color: var(--color-natural);
    transition: color 0.2s;
  }
  .icon:hover {
    color: var(--color-primary);
  }
  .drawer-content {
    margin-top: 2rem;
  }
  .drawer-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .drawer-menu li {
    padding: 12px 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  .drawer-menu li:hover {
    background: #2a2a2a;
    border-radius: 6px;
    cursor: pointer;
  }
  .drawer-menu li:last-child {
    border-bottom: none;
  }
  .drawer-menu a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 16px;
    display: block;
    transition: color 0.2s;
  }
  .drawer-menu a:hover {
    color: var(--color-primary);
  }
  .drawer-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: 8px;
  }
  .drawer-menu ul li {
    padding: 8px 1rem 8px 2rem;
    border-bottom: none;
    font-size: 14px;
  }
  .drawer-menu ul li:last-child {
    padding-bottom: 12px;
  }
  .drawer-menu ul li a {
    font-size: 14px;
  }
  @media (min-width: 768px) {
    .show-on-mobile {
      display: none;
    }
  }
  @media (max-width: 767px) {
    .head-container {
      padding: 16px 8px;
    }
    .nav-bar {
      display: none;
    }
    .divider-horizontal {
      margin-bottom: 12px;
    }
  }
</style>
